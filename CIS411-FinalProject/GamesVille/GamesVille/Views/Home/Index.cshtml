@model IEnumerable<GamesVille.Models.Game>
<link href="~/Content/Includes/_gamesVille.css" rel="stylesheet" />
@{
    ViewBag.Title = "Home Page";
}


<div class="container-fluid">
    <div class="col-md-12">

        <div class="row carousel-holder">

            <div class="col-md-12">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel" data-slide-to="1"></li>
                        <li data-target="#carousel" data-slide-to="2"></li>
                        <li data-target="#carousel" data-slide-to="3"></li>

                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="slide-image img-rounded img-responsive" src="/Content/Images/Carousel_Adventure.jpg" width="800" height="300" alt="">
                            <span class="carousel-caption row-fluid">
                                <a href="/Home/FilterCategory?category=Action%20Adventure" class="btn btn-success btn-large active pull-right"><span class="glyphicon glyphicon-play"></span>  Action &amp; Adventure Games</a>
                            </span>
                        </div>

                        <div class="item">
                            <img class="slide-image img-rounded img-responsive" src="/Content/Images/Carousel_Shooter.jpg" title="Shooter" alt="Shooter" width="800" height="300" alt="">
                            <span class="carousel-caption row-fluid">
                                <a href="/Home/FilterCategory?category=Shooter" class="btn btn-success btn-large active pull-right"><span class="glyphicon glyphicon-play"></span>  Shooter Games</a>
                            </span>
                        </div>

                        <div class="item">
                            <img class="slide-image img-rounded img-responsive" src="/Content/Images/Carousel_Sports.jpg" title="Sports" alt="Sports" width="800" height="300" alt="">
                            <span class="carousel-caption row-fluid">
                                <a href="/Home/FilterCategory?category=Sports" class="btn btn-success btn-large active pull-right"><span class="glyphicon glyphicon-play"></span>  Sports Games</a>
                            </span>
                        </div>

                        <div class="item">
                            <img class="slide-image img-rounded img-responsive" src="/Content/Images/Carousel_Arcade.jpg" title="Arcade and Puzzle" alt="Arcade and Puzzle" width="800" height="300" alt="">
                            <span class="carousel-caption row-fluid">
                                <a href="/Home/FilterCategory?category=Arcade%2FPuzzle" class="btn btn-success btn-large active pull-right"><span class="glyphicon glyphicon-play"></span>  Arcade &amp; Puzzle Games</a>
                            </span>
                        </div>

                    </div>
                    <a class="left carousel-control" href="#carousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
<hr />

<div class="col-md-12" id="content">

    <h3>Popular games this week</h3>

    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-3">

                <img src=@Html.DisplayFor(modelItem => item.PictureURL) width="180" height="200" alt="" />
                <br />
                @Html.DisplayFor(modelItem => item.Category)
                <br />
                @Html.DisplayFor(modelItem => item.Title)
                <br />
                @Html.ActionLink("Details", "More", new { id = item.ID })
                <br />
                <br />
                <br />
            </div>


        }

    </div>


</div>

    </div>



</div>
<hr />
<div class="row">
    <div class="col-md-2" id="sidemenu">
        <h4 style="color: #3E3E50; font-weight: bold">Browse Games</h4>
        <ul class="nav">
            <li>@Html.ActionLink("Action and Adventure", "FilterCategory", new { category = "Action Adventure" })</li>
            <li>@Html.ActionLink("Arcade/Puzzle", "FilterCategory", new { category = "Arcade/Puzzle" })</li>
            <li>@Html.ActionLink("Family", "FilterCategory", new { category = "Family" })</li>
            <li>@Html.ActionLink("Fighting", "FilterCategory", new { category = "Fighting" })</li>
            <li>@Html.ActionLink("Racing", "FilterCategory", new { category = "Racing" })</li>
            <li>@Html.ActionLink("Shooter", "FilterCategory", new { category = "Shooter" })</li>
            <li>@Html.ActionLink("Sports", "FilterCategory", new { category = "Sports" })</li>
        </ul>
    </div>
    <div class="col-md-10" id="content">

        <h3>Popular games this week</h3>
        <br />
        <br />
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-3">

                    <img src=@Html.DisplayFor(modelItem => item.PictureURL) width="180" height="200" alt="" />
                    <br />
                    @Html.DisplayFor(modelItem => item.Category)
                    <br />
                    @Html.DisplayFor(modelItem => item.Title)
                    <br />
                    @Html.ActionLink("Details", "More", new { id = item.ID })
                    <br />
                    <br />
                    <br />
                </div>


            }

        </div>


    </div>

</div>