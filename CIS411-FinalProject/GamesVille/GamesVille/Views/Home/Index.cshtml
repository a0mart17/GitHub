@model IEnumerable<GamesVille.Models.Game>
<link href="~/Content/Includes/_gamesVille.css" rel="stylesheet" />
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-8">
            <img src="~/Content/Images/logo.png" class="img-responsive" width="500" height="350" alt="Responsive image">
            @*<h1>GAMEZVILLE</h1>
            <h3>The right place for gamers</h3>*@
        </div>@*ends col 1*@

        <div class="col-md-4">
            

            <div id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
                <!-- Carousel items -->
                <div class="carousel-inner" style="align-content:stretch">
                    <div class="active item"><img src="http://ecx.images-amazon.com/images/I/81D63oOLsaL._SL1500_.jpg" width="150" height="150" /><div class="caption">Assassin's Creed IV: Black Flag</div></div>
                   
                    <div class="item"><img src="http://cdn4.spong.com/pack/w/o/wolfenstei408079l/_-Wolfenstein-The-New-Order-PS3-_.jpg" width="200" height="200"/><div class="caption">Wolfenstein: The New Order</div></div>
                    
                    <div class="item"><img src="http://i.neoseeker.com/n/9/call_of_duty_ghosts_xbox.jpg" width="150" height="150" /><div class="caption">Call of Duty: Ghosts</div></div>
                    <div class="item"><img src="http://i1-news.softpedia-static.com/images/news2/Batman-Arkham-Origins-Gets-Cover-Artwork-and-Fresh-Screenshots-2.jpg" width="200" height="200" /><div class="caption">Batman: Arkham Origins</div></div>
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>

        </div>@*ends col 2*@

    </div>


    
</div>
<hr />
<div class="row">
    <div class="col-md-2" id="sidemenu">
        <h4 style="color: #3E3E50; font-weight: bold">Browse Games</h4>
        <ul class="nav">
           <li>@Html.ActionLink("Action and Adventure", "Filter", new { category = "Action Adventure" })</li> 
            <li>@Html.ActionLink("Arcade/Puzzle", "Filter", new { category = "Arcade/Puzzle" })</li> 
            <li>@Html.ActionLink("Family", "Filter", new { category = "Family" })</li> 
            <li>@Html.ActionLink("Fighting", "Filter", new { category = "Fighting" })</li> 
            <li>@Html.ActionLink("Racing", "Filter", new { category = "Racing" })</li> 
            <li>@Html.ActionLink("Shooter", "Filter", new { category = "Shooter" })</li> 
            <li>@Html.ActionLink("Sports", "Filter", new { category = "Sports" })</li>       

        </ul>

       
    </div>
    <div class="col-md-10" id="content">

        <h3>Popular games this week</h3>
        <br />
        <br />
        <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-3">

                <img src=@Html.DisplayFor(modelItem => item.PictureURL) width="180" height="200" alt="" class="img-rounded" />
                <br />
                @Html.DisplayFor(modelItem => item.Category)
                <br />
                @Html.DisplayFor(modelItem => item.Title)
                <br />
                @Html.ActionLink("Details", "More", new { id = item.ID })
                <br />
                <br />
            </div>


        }

    </div>

        
    </div>
    
</div>